<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_main"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Welcome Back!"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Are you okay? Please sign in to your account"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:drawableLeft="@drawable/ic_email_24"
        android:id="@+id/et_email"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/poppins_medium"
        android:hint="Insert Your Email"
        android:inputType="text"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Password"
        android:textSize="18sp" />


    <EditText
        android:drawableLeft="@drawable/ic_key_24"
        android:id="@+id/et_password"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/poppins_medium"
        android:hint="Insert Your Password"
        android:inputType="text"
        android:textSize="15sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_patient"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_orange_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Login"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/newhere"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:fontFamily="@font/poppins_light"
        android:text="New Here?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_register_patient"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/blue_main"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility=""
        />

</LinearLayout>